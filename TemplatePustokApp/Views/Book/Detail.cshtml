@model BookDetailVm
<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="home" asp-action="index" >Home</a></li>
                    <li class="breadcrumb-item active">Product Details</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<main class="inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row  mb--60">
            <div class="col-lg-5 mb--30">
                <!-- Product Details Slider Big Image-->
                <div class="product-details-slider sb-slick-slider arrow-type-two" data-slick-setting='{
              "slidesToShow": 1,
              "arrows": false,
              "fade": true,
              "draggable": false,
              "swipe": false,
              "asNavFor": ".product-slider-nav"
              }'>
                    @foreach(var image in Model.Book.BookImages)
                    {
                        <div class="single-slide">
                            <img src="~/assets/image/products/@image.Name" alt="">
                        </div>
                    }
                </div>
                <!-- Product Details Slider Nav -->
                <div class="mt--30 product-slider-nav sb-slick-slider arrow-type-two" data-slick-setting='{
            "infinite":true,
              "autoplay": true,
              "autoplaySpeed": 8000,
              "slidesToShow": 4,
              "arrows": true,
              "prevArrow":{"buttonClass": "slick-prev","iconClass":"fa fa-chevron-left"},
              "nextArrow":{"buttonClass": "slick-next","iconClass":"fa fa-chevron-right"},
              "asNavFor": ".product-details-slider",
              "focusOnSelect": true
              }'>
                    @foreach (var image in Model.Book.BookImages)
                    {
                        <div class="single-slide">
                            <img src="~/assets/image/products/@image.Name" alt="">
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-7">
                <div class="product-details-info pl-lg--30 ">
                    <p class="tag-block">Tags:
                        @(Html.Raw(string.Join(",", Model.Book.BookTags.Select(x => $"<a href=#>{x.Tag.Name}</a>").ToList()))) @* List String verir *@

                       @*  @for(int i=0; i < Model.Book.BookTags.Count; i++)
                        {
                            @if (i <Model.Book.BookTags.Count - 1)
                            {
                                <a href="">@(Model.Book.BookTags[i].Tag.Name),</a>
                            }else
                            {
                            <a href="">@(Model.Book.BookTags[i].Tag.Name)</a>
                            }
                        } *@
                    </p>
                    <h3 class="product-title">@Model.Book.Name</h3>
                    <ul class="list-unstyled">
                        <li>Ex Tax: <span class="list-value"> £@Model.Book.CostPrice</span></li>
                        <li>Genre: <a href="#" class="list-value font-weight-bold">@Model.Book.Genre.Name</a></li>
                        <li>Product Code: <span class="list-value"> model1</span></li>
                        <li>Reward Points: <span class="list-value">@Model.Book.Rate</span></li>
                        @if (Model.Book.IsStock == true)
                        {
                            <li>
                                Availability: <span class="list-value">In Stock</span>
                            </li>
                        }
                        else
                        {
                            <li>
                                Availability: <span style="color:red" class="list-value">Out Of Stock</span>
                            </li>
                        }
                    </ul>
                    <div class="price-block">
                        @if (Model.Book.DiscountPercentege > 0)
                        {
                            <span class="price-new">£@((Model.Book.CostPrice - ((@Model.Book.CostPrice * @Model.Book.DiscountPercentege) / 100)).ToString("0.00"))</span>
                            <del class="price-old">£@Model.Book.CostPrice.ToString("0.00")</del>
                        }
                        else
                        {
                            <span class="price-new">£@Model.Book.CostPrice.ToString("0.00")</span>
                        }
                    </div>
                    <div class="rating-widget">
                        <div class="rating-block">
                            @for(int i = 0; i < 5; i++)
                            {
                                <span class="fas fa-star @(i<Model.AvarageRate?"star_on":"") "></span>
                            }
                        </div>
                        <div class="review-widget">
                            <a href="#">(@Model.Book.BookComments.Count Reviews)</a> <span>|</span>
                            <a href="#">Write a review</a>
                        </div>
                    </div>
                    <article class="product-details-article">
                        <h4 class="sr-only">Book Description</h4>
                        <p>
                            @Model.Book.Description
                        </p>
                    </article>
                    <div class="add-to-cart-row">
                        <div class="count-input-block">
                            <span class="widget-label">Qty</span>
                            <input type="number" class="form-control text-center" value="1">
                        </div>
                        <div class="add-cart-btn">
                            <a href="#" class="btn btn-outlined--primary">
                                <span class="plus-icon">+</span>Add to
                                Cart
                            </a>
                        </div>
                    </div>
                    <div class="compare-wishlist-row">
                        <a href="#" class="add-link"><i class="fas fa-heart"></i>Add to Wish List</a>
                        <a href="#" class="add-link"><i class="fas fa-random"></i>Add to Compare</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="sb-custom-tab review-tab section-padding">
            <ul class="nav nav-tabs nav-style-2" id="myTab2" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="tab1" data-bs-toggle="tab" href="#tab-1" role="tab"
                       aria-controls="tab-1" aria-selected="true">
                        DESCRIPTION
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="tab2" data-bs-toggle="tab" href="#tab-2" role="tab"
                       aria-controls="tab-2" aria-selected="true">
                        REVIEWS (@Model.Book.BookComments.Count)
                    </a>
                </li>
            </ul>
            <div class="tab-content space-db--20" id="myTabContent">
                <div class="tab-pane fade show active" id="tab-1" role="tabpanel" aria-labelledby="tab1">
                    <article class="review-article">
                        <h1 class="sr-only">Tab Article</h1>
                        <p>
                            @* Fashion has been creating well-designed collections since 2010. The brand offers
                            feminine designs delivering
                            stylish
                            separates and statement dresses which have since evolved into a full ready-to-wear
                            collection in which every
                            item is
                            a
                            vital part of a woman's wardrobe. The result? Cool, easy, chic looks with youthful
                            elegance and unmistakable
                            signature
                            style. All the beautiful pieces are made in Italy and manufactured with the greatest
                            attention. Now Fashion
                            extends
                            to
                            a range of accessories including shoes, hats, belts and more! *@
                            @Model.Book.Description
                        </p>
                    </article>
                </div>
                <div class="tab-pane fade" id="tab-2" role="tabpanel" aria-labelledby="tab2">
                    <div class="review-wrapper">
                        <h2 class="title-lg mb--20">@(Model.TotalCommentsCount) REVIEW FOR @Model.Book.Name</h2>
                        @foreach(var comment in Model.Book.BookComments)
                        {
                            <div class="review-comment mb--20">

                                <div class="text">
                                    <div class="rating-block mb--15">
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            <span class="ion-android-star-outline @(i<comment.Rate?"star_on":"")"></span>
                                        }
                                    </div>
                                    <h6 class="author">
                                        @comment.AppUser.FullName – <span class="font-weight-400">@comment.CreatedDate.ToString("MMMM dd , yyy")</span>
                                    </h6>
                                    <p>
                                       @comment.Text
                                    </p>
                                    @if (User.Identity.Name == comment.AppUser.UserName)
                                    {
                                        <a asp-route-id="@comment.Id" asp-action="deleteComment"><i class="fa-solid fa-x" style="color: #d91717;"></i></a>
                                    }
                                </div>
                            </div>
                        }
                        @* @if (Model.TotalCommentsCount > Model.Book.BookComments.Count)
                        {
                            <div class="text-center"><a  asp-action="LoadMore">Load More..</a></div>
                        } *@
                        @if (!Model.HasCommentUser)
                        {
                            <h2 class="title-lg mb--20 pt--15">ADD A REVIEW</h2>
                            <div class="rating-row pt-2">
                                <p class="d-block">Your Rating</p>
                                <span class="rating-widget-block">
                                    <input form="commentForm" type="radio" value="5" asp-for="@Model.BookComment.Rate" id="star1">
                                    <label for="star1"></label>
                                    <input form="commentForm" type="radio" value="4" asp-for="@Model.BookComment.Rate" id="star2">
                                    <label for="star2"></label>
                                    <input form="commentForm" type="radio" value="3" asp-for="@Model.BookComment.Rate" id="star3">
                                    <label for="star3"></label>
                                    <input form="commentForm" type="radio" value="2" asp-for="@Model.BookComment.Rate" id="star4">
                                    <label for="star4"></label>
                                    <input form="commentForm" type="radio" value="1" asp-for="@Model.BookComment.Rate" id="star5">
                                    <label for="star5"></label>
                                </span>
                                <form asp-action="AddComment" id="commentForm" class="mt--15 site-form ">
                                    <div class="row">
                                        <div class="col-12">
                                            <input type="hidden" asp-for="@Model.BookComment.BookId" value="@Model.Book.Id" />
                                            <div class="form-group">
                                                <label asp-for="@Model.BookComment.Text"></label>
                                                <textarea asp-for="@Model.BookComment.Text" cols="30" rows="10"
                                                          class="form-control"></textarea>
                                            </div>
                                        </div>

                                        <div class="col-lg-4">
                                            <div class="submit-btn">
                                                <button type="submit" class="btn btn-black">Post Comment</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        }
                        else
                        {
                            <h2 class="title-lg mb--20 pt--15">You cannot add comment</h2>
                        }
                    </div> 
                </div>
            </div>
        </div>
